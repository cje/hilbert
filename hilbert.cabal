    hs-source-dirs:      bench
                       , src
    main-is:             BMain.hs
    other-modules:       BHilbert
    build-depends:       base >= 4.7 && < 5
                       , criterion >= 1.0 && < 1.1.0.0
                       , random == 1.1
                       , deepseq >= 1.3 && < 1.4.2
                       , deepseq-generics == 0.1.1.*
    default-language:    Haskell2010
    ghc-options:       -Wall  -fprof-auto -rtsopts
